
<div class="blue">

    <% if (typeof data.user != 'undefined' && data.user.user_level >= 3) { %>


    <form action="/posts" method="POST">
        <label for="post_title">Post Title: </label>
        <input class="form-control" type="text" name="post_title" id="post_title">
        <br />
        <label for="post_note">Post: </label>
        <textarea name="post_note" id="post_note" class="form-control"></textarea>
        <script>
            tinymce.init({
                selector: '#post_note'
            });
        </script>

        <input type="submit" value="Add Post" class="btn btn-primary btn-local">
    </form>
    <%}%>
</div>





